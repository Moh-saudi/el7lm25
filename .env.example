# ==============================================
# HAGZZ GO - Environment Variables Example
# ==============================================
# نسخ هذا الملف إلى .env.local وتعديل القيم

# ==============================================
# 1. FIREBASE CONFIGURATION
# ==============================================
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# ==============================================
# 2. SUPABASE CONFIGURATION
# ==============================================
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==============================================
# 3. GEIDEA PAYMENT GATEWAY
# ==============================================
GEIDEA_MERCHANT_PUBLIC_KEY=your_merchant_public_key_here
GEIDEA_API_PASSWORD=your_api_password_here
GEIDEA_WEBHOOK_SECRET=your_webhook_secret_here
GEIDEA_BASE_URL=https://api.merchant.geidea.net

# ==============================================
# 4. APPLICATION SETTINGS
# ==============================================
NEXT_PUBLIC_BASE_URL=https://your-domain.com
VERCEL_URL=your-vercel-url.vercel.app
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================
# 5. OPTIONAL SERVICES
# ==============================================
# Azure Storage (إذا كنت تستخدم Azure)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string_here
AZURE_STORAGE_CONTAINER_NAME=your_container_name_here

# Next Auth (إذا كنت تستخدم NextAuth)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://your-domain.com

# SMS Notifications - Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SMS Notifications - 4jawaly (Arabic SMS Service)
JAWALY_API_KEY=your_4jawaly_api_key

# WhatsApp Notifications - Business API
WHATSAPP_PHONE_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token

# WhatsApp Notifications - Green API
GREEN_API_INSTANCE=your_green_api_instance_id
GREEN_API_TOKEN=your_green_api_token

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ==============================================
# NOTES / ملاحظات
# ==============================================
# 1. لا تشارك هذه المفاتيح مع أحد
# 2. استخدم قيم مختلفة للتطوير والإنتاج
# 3. تأكد من إضافة .env.local إلى .gitignore
# 4. يمكن ترك بعض المتغيرات فارغة للتطوير المحلي 