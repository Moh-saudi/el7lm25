rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // 📧 قاعدة خاصة لـ OTP - تسمح بالكتابة من الخادم بدون مصادقة
    match /email_otps/{email} {
      allow read, write: if true; // مؤقت للإصلاح - يمكن تقييدها لاحقاً
    }
    
    // 🔐 قاعدة أساسية: أي مستخدم مصادق عليه يمكنه القراءة والكتابة
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // 🛡️ قواعد إضافية للأمان (اختيارية)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /admins/{adminId} {
      allow read, write: if request.auth != null;
    }
    
    // 💬 قواعد الرسائل والدعم الفني
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null;
    }
    
    match /support_messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    match /support_conversations/{conversationId} {
      allow read, write: if request.auth != null;
    }
  }
} 